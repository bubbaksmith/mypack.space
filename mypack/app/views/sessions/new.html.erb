<% provide(:title, "Log in") %>
<div class="panel panel-primary log-in-form">
  <!-- Default panel contents -->
  <div class="panel-heading"> Log in </div>
  <div class="panel-body">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control log-in-entry' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control log-in-entry' %>

        <%= f.submit 'Log in', class: 'btn btn-primary log-in-entry' %>

    <% end %>
    <p>New user? <%= link_to "Sign up now!", sign_up_path %></p>
  </div>
</div>